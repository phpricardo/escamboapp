<h1 class="page-header">Administradores</h1>

    <% if @admin.errors.any? %>
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <ul>
                <% @admin.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="panel panel-default">
        <div class="panel-heading">
            <%= action %>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <div class="col-lg-6">
                    <%= form_for([:backoffice, @admin]) do |f| %>
                        <div class="form-group">
                            <label>Nome</label>
                            <%= f.text_field :name, class: "form-control", placeholder: "Nome" %>
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            <%= f.text_field :email, class: "form-control", placeholder: "user@user.com" %>
                        </div>

                        <div class="form-group">
                            <%= f.label :role %>
                            <%= f.collection_radio_buttons :role, options_for_roles, :id, :description do |b| %>
                                <div class="radio">
                                    <%= b.label { b.radio_button + b.text } %>
                                </div>
                            <% end %>
                        </div>

                        <div class="form-group">
                            <label>Senha</label>
                            <%= f.password_field :password, class: "form-control", placeholder: "6 digitos pelo menos" %>
                        </div>

                        <div class="form-group">
                            <label>Confirmação da Senha</label>
                            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "6 digitos pelo menos" %>
                        </div>

                        <button type="submit" class="btn btn-default">Salvar</button>
                    <% end %>
                </div>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
</div>
<!-- /.col-lg-12 -->